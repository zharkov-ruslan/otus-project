<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.19.xsd">

    <changeSet author="rv.zharkov" id="2023-04-05--01-create-user-table">
        <createTable remarks="Пользователь" catalogName="public" tableName="user">
            <column name="id" type="UUID" defaultValueComputed="public.gen_random_uuid()">
                <constraints nullable="false" primaryKey="true" primaryKeyName="user_pk"/>
            </column>
            <column name="user_name" type="varchar" remarks="Имя учетной записи">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="last_name" type="varchar" remarks="Фамилия">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="varchar" remarks="Имя">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar" remarks="Email">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar" remarks="Телефон">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>